{
  "manifest_version": 3,
  "name": "Nekotexs Miner",
  "version": "1.0",
  "description": "Earn $NKTX while browsing. Auto-sync with Firebase.",
  "icons": {
    "128": "img/icon128.png"
  },
  "permissions": [
    "storage",
    "alarms",
    "webNavigation"
  ],
  "host_permissions": [
    "https://firestore.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "img/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}